@model LocationVoitures.Web.Models.Vehicule
@{
    ViewData["Title"] = "Réserver un véhicule";
}

<div class="container-fluid login-bg d-flex align-items-center justify-content-center" style="min-height: 85vh; padding: 2rem 0;">
    <div class="col-md-8 col-lg-6">
        <div class="glass-card">
            <div class="glass-header text-center mb-4">
                <h4 class="text-white-50 text-uppercase letter-spacing-2">Finaliser la Location</h4>
                <h2 class="display-5" style="color: var(--premium-gold);">@Model.Marque @Model.Modele</h2>
                <div class="badge bg-warning text-dark mt-2 fs-6">@Model.PrixJour.ToString("C") / jour</div>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger bg-transparent border-danger text-danger">@ViewBag.Error</div>
            }

            <form asp-action="Book" method="post">
                <input type="hidden" name="idVehicule" value="@Model.IdVehicule" />
                
                <div class="form-floating mb-4">
                    <input type="email" name="emailClient" class="form-control" id="emailInput" required placeholder="votre@email.com" />
                    <label for="emailInput">Email Client (Compte Existant)</label>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="date" name="dateDebut" class="form-control" id="dateStart" required value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <label for="dateStart">Date de Début</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="date" name="dateFin" class="form-control" id="dateEnd" required value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                            <label for="dateEnd">Date de Fin</label>
                        </div>
                    </div>
                </div>

                <!-- Price Estimation Visualization (Optional, could be JS enhanced later) -->
                <div class="p-3 mb-4 rounded" style="background: rgba(0,0,0,0.3); border: 1px solid rgba(255,255,255,0.1);">
                    <div class="d-flex justify-content-between text-white-50">
                        <span>Estimation Total (1 jour) :</span>
                        <span class="text-white fw-bold">@Model.PrixJour.ToString("C")</span>
                    </div>
                    <small class="text-muted fst-italic">* Le prix final sera calculé à la confirmation.</small>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg py-3">
                        <i class="fas fa-check-circle me-2"></i> CONFIRMER LA RÉSERVATION
                    </button>
                    <a asp-controller="Vehicule" asp-action="Details" asp-route-id="@Model.IdVehicule" class="btn btn-outline-light">
                        Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
