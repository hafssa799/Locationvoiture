@{
    ViewData["Title"] = "Confirmation";
    // Assuming we could pass a ViewModel later for more details, keeping it static/simple for now
}

<div class="container-fluid login-bg d-flex align-items-center justify-content-center" style="min-height: 85vh;">
    <div class="col-md-6 text-center">
        <div class="glass-card py-5">
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 5rem; text-shadow: 0 0 20px rgba(40,167,69,0.5);"></i>
            </div>
            
            <h1 class="display-4 text-white mb-3 fw-bold">Succès !</h1>
            <p class="lead text-white-50 mb-5">
                Votre réservation a été enregistrée avec succès.<br/>
                Un email de confirmation vous a été envoyé.
            </p>
            
            <div class="d-grid gap-3 col-md-8 mx-auto">
                <a asp-action="Pdf" class="btn btn-outline-warning btn-lg py-3 position-relative overflow-hidden group">
                    <span class="position-relative z-1"><i class="fas fa-file-pdf me-2"></i> TÉLÉCHARGER LE BON (PDF)</span>
                </a>
                
                <a asp-controller="Vehicule" asp-action="Index" class="btn btn-link text-white-50 text-decoration-none mt-2">
                    <i class="fas fa-arrow-left me-1"></i> Retourner au Catalogue
                </a>
            </div>
        </div>
    </div>
</div>
