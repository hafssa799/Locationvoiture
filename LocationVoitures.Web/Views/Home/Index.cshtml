@{
    ViewData["Title"] = "Accueil";
}

<div class="hero-section">
    <div class="hero-content">
        <h1>DRIVE YOUR DREAM</h1>
        <p>Experience the thrill of luxury and performance.</p>
        <a asp-controller="Vehicule" asp-action="Index" class="btn btn-primary btn-lg">Explore Our Fleet</a>
    </div>
</div>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 style="color: var(--premium-gold);">Why Choose Prestige Drive?</h2>
        <p class="text-muted">Unmatched quality, service, and style.</p>
    </div>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-4" style="background: var(--premium-dark); border: 1px solid var(--premium-gray); border-radius: 10px;">
                <h3 class="mb-3">Premium Selection</h3>
                <p>From sports cars to luxury sedans, our fleet is curated for the discerning driver.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4" style="background: var(--premium-dark); border: 1px solid var(--premium-gray); border-radius: 10px;">
                <h3 class="mb-3">Seamless Booking</h3>
                <p>Book your dream car in seconds with our state-of-the-art digital platform.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4" style="background: var(--premium-dark); border: 1px solid var(--premium-gray); border-radius: 10px;">
                <h3 class="mb-3">24/7 Support</h3>
                <p>Our concierge team is available around the clock to ensure your journey is perfect.</p>
            </div>
        </div>
    </div>
</div>
