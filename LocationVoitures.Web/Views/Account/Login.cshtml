@{
    ViewData["Title"] = "Connexion";
}

<div class="container-fluid login-bg d-flex align-items-center justify-content-center" style="min-height: 85vh;">
    <div class="col-md-5 col-lg-4">
        <div class="glass-card">
            <div class="glass-header">
                <h2>Welcome Back</h2>
                <p class="text-muted">Enter your credentials to access your account</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger bg-transparent border-danger text-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="form-floating">
                    <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">SIGN IN</button>
                    <a asp-action="Register" class="btn btn-outline-light">CREATE ACCOUNT</a>
                </div>
            </form>
        </div>
    </div>
</div>
